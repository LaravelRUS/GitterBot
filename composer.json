{
    "name": "laravelrus/karmabot",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "laravel/framework": "5.3.*",
        "barryvdh/laravel-ide-helper": "~2.0",
        "doctrine/dbal": "~2.2",
        "predis/predis": "~1.1",
        "serafim/laravel-annotations": "~1.0",
        "serafim/message-component": "dev-master@dev",
        "devristo/phpws": "dev-master@dev",
        "serafim/karma-core": "dev-master@dev"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "karmabot/database"
        ],
        "psr-4": {
            "KarmaBot\\": "karmabot/app/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php karmabot/artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php karmabot/artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
